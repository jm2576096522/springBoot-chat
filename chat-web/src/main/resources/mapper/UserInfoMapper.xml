<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wys.chats.user.mapper.UserInfoMapper">

	<select id="login" parameterType="com.wys.chats.entity.UserInfoModel" resultType="com.wys.chats.entity.UserInfoModel">
		select * from tb_user_info 
		<where>
			<choose>		
				<when test="name != null and name != ''">`name` = #{name}</when>
				<otherwise>`name` = 'admin'</otherwise>
			</choose>
		</where>
	</select>
</mapper>